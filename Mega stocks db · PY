# ============================================================================
# HELPER FUNCTIONS
# ============================================================================

def get_all_stock_symbols():
    """Get all stock symbols (1000+)"""
    all_symbols = []
    all_symbols.extend(list(NSE_STOCKS.keys()))
    all_symbols.extend(list(BSE_STOCKS.keys()))
    all_symbols.extend(list(US_STOCKS.keys()))
    return all_symbols

def get_nse_stocks():
    """Get all NSE stocks"""
    return NSE_STOCKS

def get_bse_stocks():
    """Get all BSE stocks"""
    return BSE_STOCKS

def get_us_stocks():
    """Get all US stocks"""
    return US_STOCKS

def get_total_count():
    """Get total stock count"""
    return {
        'NSE': len(NSE_STOCKS),
        'BSE': len(BSE_STOCKS),
        'US': len(US_STOCKS),
        'TOTAL': len(NSE_STOCKS) + len(BSE_STOCKS) + len(US_STOCKS)
    }

def search_all_stocks(query):
    """Search across all exchanges"""
    query = query.upper()
    results = []
    
    # Search NSE
    for symbol, name in NSE_STOCKS.items():
        if query in symbol.upper() or query in name.upper():
            results.append({'symbol': symbol, 'name': name, 'exchange': 'NSE'})
    
    # Search BSE
    for symbol, name in BSE_STOCKS.items():
        if query in symbol.upper() or query in name.upper():
            results.append({'symbol': symbol, 'name': name, 'exchange': 'BSE'})
    
    # Search US
    for symbol, name in US_STOCKS.items():
        if query in symbol.upper() or query in name.upper():
            results.append({'symbol': symbol, 'name': name, 'exchange': 'US'})
    
    return results

