    """AI Analyzer for all 1000+ stocks"""
    
    API_KEY = "CMLKV2SLOT89UPM9"
    
    @staticmethod
    def analyze_any_stock(symbol):
        """Analyze any stock from NSE, BSE, or US"""
        try:
            stock = yf.Ticker(symbol)
            df = stock.history(period='3mo')
            info = stock.info
            
            if df.empty:
                return {"error": "No data available"}
            
            # Determine exchange
            if symbol.endswith('.NS'):
                exchange = 'NSE'
                name = NSE_STOCKS.get(symbol, symbol)
            elif symbol.endswith('.BO'):
                exchange = 'BSE'
                name = BSE_STOCKS.get(symbol, symbol)
            else:
                exchange = 'US'
                name = US_STOCKS.get(symbol, symbol)
            
            # Calculate indicators
            df = MegaAIAnalyzer._calculate_indicators(df)
            latest = df.iloc[-1]
            
            return {
                'symbol': symbol,
                'company': name,
                'exchange': exchange,
                'api_key': MegaAIAnalyzer.API_KEY,
                'current_price': float(latest['Close']),
                'rsi': float(latest['RSI']),
                'macd': float(latest['MACD']),
                'sma_20': float(latest['SMA_20']),
                'sma_50': float(latest['SMA_50']),
                'ai_recommendation': MegaAIAnalyzer._get_recommendation(df),
                'risk_score': MegaAIAnalyzer._calculate_risk(df),
                'timestamp': datetime.now().isoformat()
            }
        except Exception as e:
            return {"error": str(e)}
    
    @staticmethod
    def _calculate_indicators(df):
        df['SMA_20'] = df['Close'].rolling(20).mean()
        df['SMA_50'] = df['Close'].rolling(50).mean()
        
        delta = df['Close'].diff()
        gain = (delta.where(delta > 0, 0)).rolling(14).mean()
        loss = (-delta.where(delta < 0, 0)).rolling(14).mean()
        rs = gain / loss
        df['RSI'] = 100 - (100 / (1 + rs))
        
        exp1 = df['Close'].ewm(span=12).mean()
        exp2 = df['Close'].ewm(span=26).mean()
        df['MACD'] = exp1 - exp2
        
        return df
    
    @staticmethod
    def _get_recommendation(df):
        latest = df.iloc[-1]
        score = 0
        
        if latest['RSI'] < 30:
            score += 2
        elif latest['RSI'] > 70:
            score -= 2
        
        if latest['Close'] > latest['SMA_20']:
            score += 1
        if latest['SMA_20'] > latest['SMA_50']:
            score += 1
        
        if score >= 3:
            return {"action": "STRONG BUY", "confidence": 90}
        elif score >= 1:
            return {"action": "BUY", "confidence": 75}
        elif score >= -1:
            return {"action": "HOLD", "confidence": 60}
        else:
            return {"action": "SELL", "confidence": 75}
    
    @staticmethod
    def _calculate_risk(df):
        volatility = df['Close'].pct_change().std() * np.sqrt(252)
        risk = min(volatility * 200, 100)
        level = "Low" if risk < 30 else "Medium" if risk < 60 else "High"
        return {"score": float(risk), "level": level}

# Convenience functions
def analyze_stock(symbol):
    return MegaAIAnalyzer.analyze_any_stock(symbol)

